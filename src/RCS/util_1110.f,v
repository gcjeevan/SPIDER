a223 18
         IF (FOURIER)  THEN
C           FOURIER SHIFT  ----------------------------------- FOURIER

            NXLD  = NX+2-MOD(NX,2)
	    MWANT = NXLD * NY * NZ

            ALLOCATE(BUF1(MWANT), STAT=IRTFLG)
            IF (IRTFLG .NE. 0) THEN 
               CALL ERRT(46,'UTIL8, Q',MWANT)
               GOTO 9999
            ENDIF
         ELSE
            ALLOCATE(BUF1(NX), BUF2(NX*6),STAT=IRTFLG)
	    MWANT = 6 * NX
            IF (IRTFLG .NE. 0) THEN 
               CALL ERRT(46,'UTIL8, BUF1..',MWANT)
               GOTO 9999
            ENDIF
